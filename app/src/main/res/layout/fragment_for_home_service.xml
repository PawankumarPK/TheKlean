<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.view.ViewPager
            android:id="@+id/homeServiceViewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#fff" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/mHomeServiceBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:layout_margin="20dp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@+id/mForHome"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/mForHome" />


            <TextView
                android:id="@+id/mForHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="FOR HOME "
                android:layout_centerInParent="true"
                android:textColor="#73B73E"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mServicesForHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/mForHome"
                android:layout_toRightOf="@+id/mForHome"
                android:fontFamily="sans-serif-condensed"
                android:text="SERVICES"
                android:layout_centerInParent="true"
                android:textColor="#244907"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>