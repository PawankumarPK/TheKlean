<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v4.view.ViewPager
            android:id="@+id/homeServiceViewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/mHomeServiceBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/mHomeServiceBackArrow"
                android:gravity="center">

            <ImageView
                android:id="@+id/mHomeServiceIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_margin="10dp"/>


            <TextView
                android:id="@+id/mForHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="FOR HOME "
                android:textColor="#73B73E"
                android:textSize="26sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/mServicesForHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="SERVICES"
                android:textColor="#244907"
                android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>