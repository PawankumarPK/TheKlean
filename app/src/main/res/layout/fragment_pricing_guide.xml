<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/mRelativeLayoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/mProfileBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_close_green" />

        <TextView
            android:id="@+id/mMyAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/mProfileBackArrow"
            android:layout_toRightOf="@+id/mProfileBackArrow"
            android:text="Pricing Guide"
            android:textColor="#1b1a1a"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mParentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/mRelativeLayoutToolbar"
        android:background="@drawable/color_black">

        <TextView
            android:id="@+id/mPerMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Per Month"
            android:textColor="#fff"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Hidden Charges"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_below="@+id/mPerMonth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rupee"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/mSeventy"
            android:layout_toStartOf="@+id/mSeventy"
            android:contentDescription="@null"/>
        <TextView
            android:id="@+id/mSeventy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70"
            android:textColor="#fff"
            android:textSize="100dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/mGST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 19% GST"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/mSeventy"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/mSeventy" />


    </RelativeLayout>

    <Button
        android:id="@+id/mProceedNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/color_gradient"
        android:text="Proceed"
        android:textColor="#fff" />


</RelativeLayout>