<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/mRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mToolBarProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_gradient_toolbar">

            <ImageView
                android:id="@+id/mMobileVerBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_white_left_arrow" />
        </android.support.v7.widget.Toolbar>


        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mToolBarProfile"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/phoneProgress"
            android:layout_toRightOf="@+id/phoneProgress"
            android:hint="Mobile Number"
            android:inputType="number"
            tools:ignore="TextFields" />

        <ProgressBar
            android:id="@+id/phoneProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/codeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneEditText"
            android:layout_margin="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/codeProgress"
            android:layout_toRightOf="@+id/codeProgress"
            android:hint="Enter Code"
            android:inputType="number"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/codeProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There was some error"
            android:layout_below="@+id/codeProgress"
            android:layout_margin="50dp"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:textColor="#fd0303"
            android:textSize="16sp"/>


        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#252323"
            android:text="Send verification"
            android:textColor="#fff" />

    </RelativeLayout>
</RelativeLayout>