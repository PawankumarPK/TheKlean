<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <android.support.v7.widget.Toolbar
        android:id="@+id/mDateToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mDateCarBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:contentDescription="@null"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textColor="#1b1a1a"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/timing_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mDateToolbar"
        android:indeterminate="true"
        android:visibility="invisible" />

    <DatePicker
        android:id="@+id/date_picker_for_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timing_progress"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/mDailyCarServiceTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker_for_car"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="Car Washing Service"
        android:layout_marginTop="-20dp"
        android:textColor="#000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/mDailyCarServiceAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker_for_car"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/mDailyCarServiceTaken"
        android:layout_toRightOf="@+id/mDailyCarServiceTaken"
        android:text="70+18% GST"
        android:layout_marginTop="-20dp"
        android:textColor="#000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/mDailyCarServiceTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker_for_car"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/mDailyCarServiceAmount"
        android:layout_toRightOf="@+id/mDailyCarServiceAmount"
        android:text="20-12-2018"
        android:layout_marginTop="-20dp"
        android:textColor="#000"
        android:visibility="invisible" />

    <Button
        android:id="@+id/mSavedNewCarService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/color_gradient"
        android:text="Done"
        android:textColor="#fff" />


</RelativeLayout>