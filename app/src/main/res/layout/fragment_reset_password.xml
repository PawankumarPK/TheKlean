<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mForgotPassToolbar">

        <ImageView
            android:id="@+id/mForgotPasswordBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:contentDescription="@null"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textColor="#1b1a1a"
            android:textSize="22sp" />

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/mForgotText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotPassDesc"
        android:textSize="15sp"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/mForgotPassToolbar"/>

    <EditText
        android:id="@+id/mEnterRegisterEmailAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Registered email address"
        android:layout_below="@+id/mForgotText"
        android:layout_margin="13dp"
        android:inputType="textEmailAddress"/>

    <Button
        android:id="@+id/mSendLinkForReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mEnterRegisterEmailAdd"
        android:text="Send a link to reset"
        android:background="@drawable/color_gradient"
        android:textColor="#fff"
        android:layout_margin="13dp"/>

</RelativeLayout>